<h2 class="squatch-panel-title">
  Referral Stats
</h2>

<div class="squatch-stats">
  <div class="squatch-stats-item">
    <div class="squatch-stats-title">
      {{#if dollarCreditRewardBalance.totalAssignedCredit}}
        ${{math dollarCreditRewardBalance.totalAssignedCredit '/ 100'}}
      {{else}}
        $0
      {{/if}}
    </div>

    <span class="squatch-stats-description">Total Credit Earned</span>
  </div>

  <div class="squatch-stats-item">
    <div class="squatch-stats-title text-green">
      {{#if dollarCreditRewardBalance.totalAssignedCredit}}
        ${{math '(' dollarCreditRewardBalance.totalAssignedCredit '-' dollarCreditRewardBalance.totalRedeemedCredit ') / 100'}}
      {{else}}
        $0
      {{/if}}
    </div>

    <span class="squatch-stats-description">Credit Available</span>
  </div>

  <div class="squatch-stats-item">
    <div class="squatch-stats-title">{{referralsLength}}</div>

    <span class="squatch-stats-description">Friends Referred</span>
  </div>
</div>
