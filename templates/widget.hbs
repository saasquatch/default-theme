    {{!--

    ALL REFERENCED VARIABLES (IN THE WIDGET)

    Header: widget.REFERRER_WIDGET.content.widgetCustomization.heading
    Details: widget.REFERRER_WIDGET.content.widgetCustomization.headerDetails
    Share Code Details: widget.REFERRER_WIDGET.content.widgetCustomization.shareCodeDetails
    Share Medium Details: widget.REFERRER_WIDGET.content.widgetCustomization.shareMediumDetails

    Copy Button Text: widget.REFERRER_WIDGET.content.textVariables.shareButtons.copy
    Copy Succes: widget.REFERRER_WIDGET.content.textVariables.shareNotificationSuccess
    Copy Failure: widget.REFERRER_WIDGET.content.textVariables.shareNotificationFailure

    --}}

    <sqh-global-container class="squatch-container" loadingcolor="#439B76">

        <div class="sqh-main-section">

            <sqh-text-component sqhbody="true" ismarkdown="true"
                fontfamily="Euclid WU,Noto Sans,Arial,Open Sans,HelveticaNeue,Helvetica Neue,Helvetica,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol"
                text="{{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.heading'}}"
                color="#0a0005" fontsize="50" textalign="left" paddingtop="0" paddingbottom="0"
                fontweight="700" class="sqh-header-text"></sqh-text-component>

            <sqh-text-component sqhbody="true"
                fontfamily="Euclid WU,Noto Sans,Arial,Open Sans,HelveticaNeue,Helvetica Neue,Helvetica,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol"
                ismarkdown="true"
                text="{{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.headerDetails' }}"
                color="#0a0005" fontsize="20" textalign="left" paddingtop="24" paddingbottom="24"
                class="sqh-description-text"></sqh-text-component>
            <sqh-text-component sqhbody="true" ismarkdown="true"
                fontfamily="Euclid WU,Noto Sans,Arial,Open Sans,HelveticaNeue,Helvetica Neue,Helvetica,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol"
                text="{{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.shareCodeDetails' }}"
                color="#3D3D3D" fontsize="18" textalign="left" paddingtop="0" paddingbottom="0"
                class="sqh-copy-cta-text"></sqh-text-component>
            <mini-copy-box
                text="{{variables 'widget.REFERRER_WIDGET.content.textVariables.shareButtons.copy'}}"
                copysuccess="{{variables 'widget.REFERRER_WIDGET.content.textVariables.shareNotificationSuccess' }}"
                copyfailure="{{variables 'widget.REFERRER_WIDGET.content.textVariables.shareNotificationFailure' }}"
                buttoncolor="#0a0005" textcolor="#ffdd00"></mini-copy-box>
            <sqh-text-component sqhbody="true" ismarkdown="true"
                fontfamily="Euclid WU,Noto Sans,Arial,Open Sans,HelveticaNeue,Helvetica Neue,Helvetica,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol"
                text="{{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.shareMediumDetails' }}"
                color="#3D3D3D" fontsize="14" textalign="left" paddingtop="12" paddingbottom="12" class="sqh-details">
            </sqh-text-component>
            <wa-share-button-container emaildisplayrule="desktop-mobile" emailtext=""
                emailtextcolor="#ffdd00" emailbackgroundcolor="#0a0005"
                facebookdisplayrule="desktop-mobile" facebooktext="" facebooktextcolor="#ffdd00"
                facebookbackgroundcolor="#0a0005" twitterdisplayrule="hidden" twittertext=""
                twittertextcolor="#ffffff" twitterbackgroundcolor="#4797d2" smsdisplayrule="hidden"
                smstext="" smstextcolor="#ffffff" smsbackgroundcolor="#7bbf38"
                whatsappdisplayrule="hidden" whatsapptext="" whatsapptextcolor="#ffffff"
                whatsappbackgroundcolor="#25D366" linkedindisplayrule="hidden" linkedintext=""
                linkedintextcolor="#ffffff" linkedinbackgroundcolor="#0084b9"
                pinterestdisplayrule="hidden" pinteresttext="" pinteresttextcolor="#ffffff"
                pinterestbackgroundcolor="#cb2027" messengerdisplayrule="desktop-mobile"
                messengertext="" messengertextcolor="#ffdd00" messengerbackgroundcolor="#0a0005"
                linedisplayrule="hidden" linetext="" linetextcolor="#ffffff"
                linebackgroundcolor="#00c300">
            </wa-share-button-container>
        </div>

        <wa-footer></wa-footer>

    </sqh-global-container>

